@model IEnumerable<BookShop.Models.Book>
@{
    ViewData["Title"] = "Store";
}
<h2>Store</h2>
 <form asp-action="Index" class="col-2 my-1 p-2"> 
     <div> 
         Filter Search 
         <div class="my-1"> 
             <input type="text" name="search string" placeholder="Tilte or Author" class="form-control-sm col-12" /> 
         </div> 
         <div class="my-1"> 
             <input type="number" name="minPrice" placeholder="$min" step="1" class="form-control-sm col-5" />&nbsp;&#8212;&nbsp; <input type="number" name="maxPrice" placeholder="$max" step="1" class="form-control-sm col-5" /> 
         </div> 
         <input type="submit" value="Filter" class="btn btn-Primary btn-sm" /> 
         <a asp-action="Index" class="btn btn-secoundry btn-sm float-right">Clear</a> 
     </div> 

 </form> 
<div class="row">
    @foreach(var book in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.ImageUrl" class="card-img-top card-img-custom" />
                    <div class="card-body" style="height:6em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                </a>
             </div>
             <div class="card-body">
                 <span class="card-text">
                     @book.Price.ToString("c")
                 </span>
                <a asp-controller="Cart" asp-action="Addtocart" asp-route-id="@book.Id" class="btn btn-primary float-right store-btn"><i class="fa-solid fa-cart-plus"></i></a>


             </div>

        </div>

    }
</div>