@model BookShop.ViewModel.AddRoleViewModel
@{
    ViewData["Title"] = "Add Role";
}
<h1>Add Role</h1>
<form asp-action="AddRole" class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div>
            <input asp-for="RoleName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group col-4">
        <button type="submit" class="btn btn-primary">
            Add Role
        </button>
        <div>
            <a asp-action="ListAllRoles" class="btn tn-warning my-3"><i class="fa-solid fa-angles-left"></i>Back</a>
        </div>
        
    </div>

</form>